<div class="col-lg-9 col-sm-8">
  {{#if dataEvent}}
  <div class="card">
    <div class="header">
      <h4 class="title">Próximos Eventos</h4>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <th>Congresso</th>
          <th>Evento</th>
          <th>Horário</th>
          <th>Inscrições</th>
        </thead>
        <tbody>
          {{#each dataEvent}}
          <tr>
            <td>{{this.congressName}}</td>
            <td>{{this.name}}</td>
            <td>{{this.date}}</td>
            <td>
              {{#if this.bol_limit}}
              {{this.countSubscription}}/{{this.limit}}
              {{else}}
              {{this.countSubscription}}
              {{/if}}
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
  {{/if}}
  <div class="card">
    <div class="header">
      <h4 class="title">Próximos Eventos Inscritos</h4>
    </div>
    <div class="content table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <th>Congresso</th>
          <th>Evento</th>
          <th>Horário</th>
        </thead>
        <tbody>
          {{#each dataEventSub}}
          <tr>
            <td>{{this.congressName}}</td>
            <td>{{this.name}}</td>
            <td>{{this.date}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="col-lg-3 col-sm-4">
  <div class="card">
    <div class="header">
      <h4 class="title">Buscar por data</h4>
    </div>
    <div class="content">
      <div id="datepicker">
      </div>
    </div>
  </div>
</div>

<script src="/js/page/home.js" type="text/javascript"></script>

<script type="text/javascript">
  $(document).ready(function () {
    $('#datepicker').datepicker({
      inline: true,
      format: 'dd/mm/yyyy',
      language: "pt-BR",
      defaultDate: '01/01/2023' 
    }){{#if dateSelect}}
    .datepicker( "setDate" , "{{dateSelect}}" )
    {{/if}}.on('changeDate',  function(e){changePicker(e)});
  })
</script>