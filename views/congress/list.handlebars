<div class="col-md-12">
  <div class="card">
    <div class="header">
      {{!-- <h4 class="title">Próximos Eventos</h4> --}}
      {{!-- <p class="category">Here is a subtitle for this table</p> --}}
    </div>
    <div class="content table-responsive table-full-width">
      <div class="row">
        <div class="actions-table col-md-12">
          {{#if permission.congress.export}}
          <a href="{{route.route}}/exportar-pdf" target="_blank" title="Exportar PDF"><button class="btn btn-simple"><i class="fa fa-file-pdf-o" aria-hidden="true"></i></button></a>
          <a href="{{route.route}}/exportar-csv" target="_blank" title="Exportar CSV"><button class="btn btn-simple"><i class="fa fa-table" aria-hidden="true"></i></button></a>
          {{/if}}
          <a href="{{route.route}}"><button class="btn btn-simple" title="Recarregar página"><i class="fa fa-refresh" aria-hidden="true"></i></button></a>
          {{#if permission.congress.create}}
          <a href="{{route.route}}/novo"><button class="btn btn-simple" title="Criar novo"><i class="fa fa-plus-circle" aria-hidden="true"></i></button></a>
          {{/if}}
        </div>
      </div>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            {{#each dataColumns}}
            <th>{{this}}</th>
            {{/each}}
            {{#if permission.congress.read}}
            <th>Vizualizar</th>
            {{/if}}
            {{#if permission.congress.update}}
            <th>Editar</th>
            {{/if}}
            {{#if permission.congress.delete}}
            <th>Excluir</th>
            {{/if}}
          </tr>
        </thead>
        <tbody>
          {{#each data}}
          <tr>
            <td>{{this.cod}}</td>
            <td>{{this.name}}</td>
            <td>{{this.date}}</td>
            <td>{{this.dateEnd}}</td>
            {{#if ../permission.congress.read}}
            <td><a href="{{../route.route}}/{{this.cod}}"><button class="btn btn-simple"><i class="fa fa-eye" aria-hidden="true"></i></button></a></td>
            {{/if}}
            {{#if ../permission.congress.update}}
            <td>{{#if this.dateEndClose}}{{else}}<a href="{{../route.route}}/editar/{{this.cod}}"><button class="btn btn-simple"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></button></a>{{/if}}</td>
            {{/if}}
            {{#if ../permission.congress.delete}}
            <td>{{#if this.dateEndClose}}{{else}}<a href="{{../route.route}}/excluir/{{this.cod}}"><button class="btn btn-simple btn-danger"><i class="fa fa-window-close-o" aria-hidden="true"></i></button></a>{{/if}}</td>
            {{/if}}
          </tr>
          {{/each}}
        </tbody>
      </table>
      <div class="row">
        <div class="col-md-4">
          <div class="col-md-12"><span> Página {{listInfo.page}} de {{listInfo.total}}</span></div>
        </div>
        <div class="actions-table col-md-8">
          <div class="col-md-12">
            {{#if listInfo.beforte}}<a href="{{route.route}}/?pag={{listInfo.beforte}}&lim={{listInfo.limit}}"><button class="btn btn-simple"><i class="fa fa-arrow-circle-left" aria-hidden="true"></i></button></a>{{/if}}
            <select name="" id="" onchange="alterLimit(this,'{{route.route}}/?pag=1&lim=')">
              <option {{#if listInfo.group.[5] }} selected {{/if}} value="5">5</option>
              <option {{#if listInfo.group.[10] }} selected {{/if}} value="10">10</option>
              <option {{#if listInfo.group.[30] }} selected {{/if}} value="30">30</option>
            </select>
            {{#if listInfo.next}}<a href="{{route.route}}/?pag={{listInfo.next}}&lim={{listInfo.limit}}"><button class="btn btn-simple"><i class="fa fa-arrow-circle-right" aria-hidden="true"></i></button></a>{{/if}}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="/js/page/lista.js" type="text/javascript"></script>