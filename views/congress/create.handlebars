<div class="col-md-12">
  <div class="card">
    <div class="header">
      <div class="row">
        <div class="col-md-12 text-center">
          <h2 class="title ">Criar {{route.name}}</h2>
        </div>
      </div>
    </div>
    <div class="content">
      <form action="{{route.route}}/novo" method="post">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="">Nome</label><small>*</small>
              <input required type="text" name="name" class="form-control" placeholder="Nome" value="">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Data de início</label><small>*</small>
              <input required type="datetime-local" name="date" class="form-control" value="" onchange='onChangeDate();'>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Data de Termino</label><small>*</small>
              <input required type="datetime-local" name="dateEnd" class="form-control" value="" onchange='onChangeDate();'>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Terá endereço? </label><br>
              <label class="switch">
                <input name="bol_address" type="checkbox" onchange='addressChange(this);'>
                <span class="slider round"></span>
              </label>
            </div>
          </div>
        </div>
        <div id="address" class="row" style="display: none;">
          <div class="col-md-12">
            <div class="card">
              <div class="header">
                <div class="row">
                  <div class="col-md-12 text-center">
                    <h4 class="title ">Endereço</h4>
                  </div>
                </div>
              </div>
              <div class="content">
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="">CEP</label><small>*</small>
                      <input disabled required type="text" name="address[cep]" class="form-control" placeholder="CEP" value="">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="">Estado</label><small>*</small>
                      <input disabled required type="text" name="address[state]" class="form-control" placeholder="Estado" value="">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="">Cidade</label><small>*</small>
                      <input disabled required type="text" name="address[city]" class="form-control" placeholder="Cidade" value="">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="">Bairro</label><small>*</small>
                      <input disabled required type="text" name="address[district]" class="form-control" placeholder="Bairro" value="">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="">Logradouro</label><small>*</small>
                      <input disabled required type="text" name="address[street]" class="form-control" placeholder="Logradouro" value="">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label class="required" for="">Número</label><small>*</small>
                      <input disabled required type="text" name="address[number]" class="form-control required" placeholder="Número" value="">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="">Complemento</label>
                      <input disabled type="text" name="address[complement]" class="form-control" placeholder="Complemento" value="">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <label for="">Refêrencia</label>
                      <input disabled type="text" name="address[reference]" class="form-control" placeholder="Refêrencia" value="">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Descrição</label><small>*</small>
              <textarea required rows="5" type="text" name="description" class="form-control" value=""></textarea>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="col-xs-6 col-sm-3">
              <a target="" href="{{route.route}}"><button type="button" class="btn btn-default btn-block">Cancelar</button></a>
            </div>
            <div class="col-xs-6 col-sm-3 col-md-push-6">
              <button type="submit" class="btn btn-info btn-fill btn-block">Salvar</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/page/congresso.js" type="text/javascript"></script>