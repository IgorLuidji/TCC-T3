

<div class="col-md-6 col-md-push-3">
  <div class="card">
    <div class="header">
      <div class="row">
        <div class="col-md-12 text-center">
          <h2 class="title ">Criar uma Conta</h2>
        </div>
      </div>
    </div>
    <div class="content">
      <form action="/cadastro" method="post">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="">Nome</label>
              <input required type="text" name="firstName" class="form-control" placeholder="Nome" value="">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="">Sobrenome</label>
              <input required type="text" name="lastName" class="form-control" placeholder="Sobrenome" value="">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="">E-mail</label>
              <input required type="email" name="email" class="form-control" placeholder="E-mail">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Senha</label>
              <input required type="password" minlength="8" name="password" onChange="onChangePass()" class="form-control" placeholder="Senha" value="">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Confirme sua senha</label>
              <input required type="password" minlength="8" name="confirmPassword" onChange="onChangePass()" class="form-control" placeholder="Senha" value="">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Nascimento</label>
              <input required type="date" name="birthDate" class="form-control" value="">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-xs-6 col-sm-3">
            <a target="" href="/login"><button type="button" class="btn btn-default btn-block">Voltar</button></a>
          </div>
          <div class="col-xs-6 col-sm-3 col-md-push-6">
            <button type="submit" class="btn btn-info btn-fill btn-block">Criar Conta </button>
          </div>
        </div>
        <div class="clearfix"></div>
      </form>
      <div class="row">
        <div class="col-md-12">
          <br>
          <div class="text-center"><p class="text-">Ou</p></div>
          <div class="row">
            <div class="col-md-5 col-xs-push-3">
              <p>Entre com: </p>
            </div>
            <div class="col-md-7 col-md-push-0 col-xs-push-3">
              <a href="/create-google"><button class="btn btn-fill btn-danger" title="Login com Google"><i class="fa fa-google" aria-hidden="true"></i></button></a>
             <a href="/create-facebook"><button class="btn btn-fill btn-primary" title="Login com o Facebook"><i class="fa fa-facebook" aria-hidden="true"></i></button></a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<script>
  function onChangePass() {
    const password = document.querySelector('input[name=password]');
    const confirm = document.querySelector('input[name=confirmPassword]');
    if (confirm.value === password.value) {
      confirm.setCustomValidity('');
    } else {
      confirm.setCustomValidity('Senhas n√£o conferem');
    }
  }
</script>