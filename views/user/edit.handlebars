<div class="col-md-12">
  <div class="card">
    <div class="header">
      <div class="row">
        <div class="col-md-12 text-center">
          <h2 class="title ">Editar {{route.name}}</h2>
        </div>
      </div>
    </div>
    <div class="content">
      <form action="{{route.route}}/editar" method="post">
      <input type="hidden" name="id" value="{{userData.id}}">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="">Nome</label><small>*</small>
              <input required type="text" name="firstName" class="form-control" placeholder="Nome" value="{{userData.firstName}}">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="">Sobrenome</label><small>*</small>
              <input required type="text" name="lastName" class="form-control" placeholder="Sobrenome" value="{{userData.lastName}}">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="">E-mail</label><small>*</small>
              <input required type="email" name="email" class="form-control" placeholder="E-mail" value="{{userData.email}}">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Senha</label><small>*</small>
              <input required type="password" minlength="8" name="password" class="form-control" placeholder="Senha" value="********************" disabled>
            </div>
            <div class="actions-table"><button title="Clique para inserir uma nova senha" type="button" onclick="alterLimit('password')" class="btn btn-simple"><i class="fa fa-lock" aria-hidden="true"></i></button></div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Nascimento</label><small>*</small>
              <input required type="date" name="birthDate" class="form-control" value="{{userData.birthDate}}">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Perfil</label><small>*</small>
              <select required class="form-control" name="profile_cod">
              {{#each listProfile}}
                <option {{#if this.checked}}selected{{/if}} value="{{this.id}}">{{this.name}}</option>
              {{/each}}
              </select>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="col-xs-6 col-sm-3">
              <a target="" href="{{route.route}}"><button type="button" class="btn btn-default btn-block">Cancelar</button></a>
            </div>
            <div class="col-xs-6 col-sm-3 col-md-push-6">
              <button type="submit" class="btn btn-info btn-fill btn-block">Salvar</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="/js/page/usuario.js" type="text/javascript"></script>