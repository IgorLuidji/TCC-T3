<div class="col-md-12">
  <div class="card">
    <div class="header">
      <div class="row">
        <div class="col-md-12 text-center">
          <h2 class="title ">Criar Perfil</h2>
        </div>
      </div>
    </div>
    <div class="content">
      <form action="{{route.route}}/novo" method="post">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="">Nome</label><small>*</small>
              <input required type="text" name="name" class="form-control" placeholder="Nome" value="">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="">Descrição</label><small>*</small>
              <input required type="text" name="descritption" class="form-control" placeholder="Descrição" value="">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="header">
                <div class="row">
                  <div class="col-md-12 text-center">
                    <h4 class="title ">Permissões</h4>
                  </div>
                </div>
              </div>
              <div class="content">
                <div class="row">
                  <div class="col-md-12">
                    <ul class="nav nav-tabs">
                      {{#each listPermission}}
                      <li {{#if this.first}}class="active" {{/if}}><a data-toggle="tab"
                          href="#{{this.name}}">{{this.descritption}}</a></li>
                      {{/each}}
                    </ul>
                    <div class="tab-content">
                      {{#each listPermission}}
                      <div id="{{this.name}}" class="tab-pane fade {{#if this.first}} in active {{/if}}">
                        <label class="checkbox-inline"><input type="checkbox" name="permission[{{this.name}}][read]"
                            value="true">Vizualizar</label>
                        <label class="checkbox-inline"><input type="checkbox" name="permission[{{this.name}}][create]"
                            value="true">Criar</label>
                        <label class="checkbox-inline"><input type="checkbox" name="permission[{{this.name}}][update]"
                            value="true">Editar</label>
                        <label class="checkbox-inline"><input type="checkbox" name="permission[{{this.name}}][delete]"
                            value="true">Excluir</label>
                        <label class="checkbox-inline"><input type="checkbox" name="permission[{{this.name}}][export]"
                            value="true">Exportar</label>
                      </div>
                      {{/each}}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="col-xs-6 col-sm-3">
              <a target="" href="{{route.route}}"><button type="button" class="btn btn-default btn-block">Cancelar</button></a>
            </div>
            <div class="col-xs-6 col-sm-3 col-md-push-6">
              <button type="submit" class="btn btn-info btn-fill btn-block">Salvar</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>