<style>
  .modal-backdrop {
    display: none;
  }
  .star{
    font-size: large;
  }
  .fa-star{
    margin: .5%;
    cursor: pointer;
  }
  .checked {
    color: orange;
  }
</style>
<div class="col-md-12">
  <div class="card">
    <div class="header">
      <div class="row">
        <div class="col-md-12 text-center">
          <h4 class="title ">Avaliar Evento</h2>
          <h2 class="title">{{eventData.name}} </h4>
          <p class="category"><small>Congresso: {{dataCongress.name}}</small></p>
        </div>
      </div>
    </div>
    <div class="content">
      <form action="{{route.route}}/avaliar" method="post">
      <input type="hidden" name="id" value="{{eventData.id}}">
      <input type="hidden" name="grade" value="4">
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label for="">Qual a sua nota para esse evento? <small>(De 1 a 5)</small></label>
              <div class="star">
                <span class="fa fa-star" onclick="starChange(1)"></span>
                <span class="fa fa-star" onclick="starChange(2)"></span>
                <span class="fa fa-star" onclick="starChange(3)"></span>
                <span class="fa fa-star" onclick="starChange(4)"></span>
                <span class="fa fa-star" onclick="starChange(5)"></span>
              </div>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="form-group">
              <label>Deixe um coment√°rio:</label>
              <textarea rows="5" type="text" name="comment" maxlength="255" class="form-control" value="">{{assessmentData.comment}}</textarea>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <div class="col-xs-6 col-sm-3">
              <a target="" href="{{route.route}}"><button type="button" class="btn btn-default btn-block">Cancelar</button></a>
            </div>
            <div class="col-xs-6 col-sm-3 col-md-push-6">
              <button type="submit" class="btn btn-info btn-fill btn-block">Enviar</button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


<script src="/js/page/avaliar.js" type="text/javascript"></script>

<script>
  $( document ).ready(function() {
    starChange({{#if assessmentData.grade}} {{assessmentData.grade}} {{else}} 4 {{/if}})
  });
</script>